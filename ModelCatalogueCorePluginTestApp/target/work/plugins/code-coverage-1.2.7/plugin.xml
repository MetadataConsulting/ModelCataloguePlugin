  <description>Creates Code Coverage reports for your code</description>
  <documentation>https://github.com/beckje01/grails-code-coverage</documentation>
  <type>CodeCoverageGrailsPlugin</type>
  <resources />
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
