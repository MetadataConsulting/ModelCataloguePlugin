<plugin name='elasticsearch-gorm' version='0.0.2.3' grailsVersion='2.1.0 &gt; *'>
  <author>Noam Y. Tenne</author>
  <authorEmail>noam@10ne.org</authorEmail>
  <title>ElasticSearch GORM Plugin</title>
  <description>An alternative Elasticsearch plugin for Grails. Based on, but unlike the original, this implementation aims to be DB agnostic.</description>
  <documentation>http://noamt.github.io/elasticsearch-gorm-plugin</documentation>
  <type>ElasticsearchGormGrailsPlugin</type>
  <resources>
    <resource>DefaultElasticSearch</resource>
    <resource>ElasticsearchBootStrap</resource>
    <resource>org.grails.plugins.elasticsearch.ElasticSearchAdminService</resource>
    <resource>org.grails.plugins.elasticsearch.ElasticSearchService</resource>
  </resources>
  <repositories>
    <repository name='grailsCentral' url='http://grails.org/plugins' />
    <repository name='http://repo.grails.org/grails/core' url='http://repo.grails.org/grails/core/' />
    <repository name='mavenCentral' url='http://repo1.maven.org/maven2/' />
  </repositories>
  <dependencies>
    <provided>
      <dependency group='org.grails' name='grails-datastore-core' version='1.1.9.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-web' version='1.1.9.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-gorm-plugin-support' version='1.1.9.RELEASE' />
      <dependency group='org.grails' name='grails-datastore-gorm' version='1.1.9.RELEASE' />
    </provided>
    <runtime>
      <dependency group='com.spatial4j' name='spatial4j' version='0.3' />
      <dependency group='org.elasticsearch' name='elasticsearch-lang-groovy' version='1.5.0' />
      <dependency group='org.elasticsearch' name='elasticsearch' version='0.90.5' />
    </runtime>
  </dependencies>
  <plugins />
  <runtimePluginRequirements />
  <behavior />
</plugin>